{% extends sonata_block.templates.block_base %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block block %}


    <div class="cms-block cms-block-element" ng-app="dashboardApp" data-ng-controller="MainCtrl" data-ng-init="init()">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Visites</h3>
            </div>
            <div class="box-body">
                <input date-range-picker="[[opts]]" class="form-control date-picker" type="text" ng-model="date" ng-change="test()" />

                <div class="row">
                        <div class="col-md-12">
                            <canvas id="line" class="chart chart-line" data="data"
                                    labels="labels" legend="true" series="series"
                                    click="onClick">
                            </canvas>
                        </div>

                </div>

            </div>
        </div>
    </div>


{% endblock %}