<div class="container">
    {#<!-- Breadcrumb -->#}
    <div class="row">
        <div class="col-md-12">
            <div class="banner">
                <div class="overlap">
                    <img class="img-responsive center-block" src="{{ 'bundles/demofony2app/images/titular-CMS.jpg' | imagine_filter('front_heading') }}" alt="{{ parent.title | trans }} logo"/>
                    {% block breadcrumb %}
                        <ol class="breadcrumb">
                            <li><a href="{{ path(parent.path) }}">{{ parent.title | trans }}</a></li>
                            <li class="active">{{ page.title | trans }}</li>
                        </ol>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
    {#<!-- Main content -->#}
    <div class="row">
        <div class="col-md-12">
            <h1 class="demofony-heading">{% if icon is defined %}<span class="icon {{ icon }}"></span>&nbsp;{% endif %}{{ page.title | trans }}</h1>
            <p>{{ page.description | raw }}</p>
        </div>
    </div>
</div>
