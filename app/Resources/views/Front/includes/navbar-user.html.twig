<li class="dropdown">
    <button type="button" class="dropdown-toggle navbar-btn btn btn-sm btn-info c-blue-dark" data-toggle="dropdown">
        <img class="media-object top-menu-box" src="{{ vich_uploader_asset(app.user, 'image') | imagine_filter('top_menu_profile') }}" alt="{{ app.user.username }} GO Premia user profile"/> {{ app.user.username }}
    </button>
    <ul class="dropdown-menu df-dropdown-user-menu">
        <li><a class="df-dropdown-user-menu" href="{{ path('fos_user_profile_public_show', {username: app.user.username}) }}"><span class="glyphicon glyphicon-user" data-aria-hidden="true"></span> {{ 'front.home.profile' | trans }}</a></li>
        <li class="divider"></li>
        {% if is_granted('ROLE_ADMIN') %}
            <li><a class="df-dropdown-user-menu" href="{{ path('sonata_admin_dashboard') }}"><i class="fa fa-cogs"></i> {{ 'front.home.admin' | trans }}</a></li>
            <li class="divider"></li>
        {% endif %}
        <li><a class="df-dropdown-user-menu" href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-off" data-aria-hidden="true"></span> {{ 'front.home.logout' | trans }}</a></li>
    </ul>
</li>
