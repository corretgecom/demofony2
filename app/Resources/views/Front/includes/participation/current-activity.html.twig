{% for object in objects %}
    {% set path = '#' %}
    {% if object is processParticipation %}
        {% set path = path('demofony2_front_participation_proposals_edit', {id: object.id, titleSlug: object.titleSlug}) %}
    {% elseif object is proposal %}
        {% set path = path('demofony2_front_participation_proposals_edit', {id: object.id, titleSlug: object.titleSlug}) %}
    {% elseif object is citizenForum %}
        {% set path = path('demofony2_front_participation_citizen_forums_edit', {id: object.id, slug: object.titleSlug}) %}
    {% endif %}
    <div class="media">
        <div class="media-left">
            {% if object.gallery | length > 0 %}
                <a href="{{ path }}">
                    <img class="media-object" src="{{ object.gallery[0] | gallery(object) | imagine_filter('60x60') }}">
                </a>
            {% endif %}
        </div>
        <div class="media-body">
            <h5 class="list-group-item-heading"><a href="{{ path }}">{{ object.title }}</a></h5>
            <p class="list-group-item-text c-black">
                {% set description = object.description | striptags %}
                {{ description | length > 100 ?  description[:100] ~ '...' : description  }}
            </p>
        </div>
    </div>
{% endfor %}
