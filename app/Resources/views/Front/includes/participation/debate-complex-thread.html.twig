                {#</form>#}
            </div>
            <span data-ng-if="c.children_count > 0" data-ng-click="comment.getAnswers(c)">{{ 'show_answers' | trans }}</span>
            <ul class="media-list no-m-bottom">
                <li class="media" data-ng-repeat="c in c.answers.comments">
                    [[ c.title ]]
                    [[ c.comment ]]
                </li>
            </ul>
        </div>
    </li>
