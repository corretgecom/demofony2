{% if discussion.gps %}
    <div class="row">
        <div class="col-md-12">
            <ui-gmap-google-map center="map.center" zoom="map.zoom" options="map.options" control="map.control">
                <ui-gmap-marker idKey="discussion.id" coords="discussion.gps"></ui-gmap-marker>
            </ui-gmap-google-map>
        </div>
    </div>
{% endif %}
{% if discussion.documents | length > 0 %}
    <div class="row">
        {% for document in discussion.documents if document.documentName %}
            <div class="col-md-12">
                <a class="download-anchor" href="{{ document.url }}" download="{{ document.documentName }}"><span class="icon-cloud_download"></span> {{ document.name }}</a>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% if discussion.gallery | length > 0 %}
    <div class="row">
        {#{% for image in discussion.images %}#}
