                {#<a class="fancybox" href="{{ vich_uploader_asset(image, 'image') | imagine_filter('big') }}"><img class="img-responsive" src="{{ vich_uploader_asset(image, 'image') | imagine_filter('400xY') }}" alt="{{ image.alt }}"></a>#}
            {#</div>#}
        {#{% endfor %}#}
        {% for image in discussion.gallery %}
            <div class="col-md-4">
                <a class="fancybox" href="{{ image | gallery(discussion) | imagine_filter('big')  }}"><img class="img-responsive" src="{{ image | gallery(discussion) | imagine_filter('400xY') }}"></a>
            </div>
        {% endfor %}
    </div>
{% endif %}
