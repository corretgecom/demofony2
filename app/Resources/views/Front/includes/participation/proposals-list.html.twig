<div class="list-group no-m-bottom">
    {% for proposal in proposals %}
        <a class="advert-anchor" href="#{# TODO fecth proposal detail path #}">
            <div class="list-group-item">
                <h3 class="list-group-item-heading">{{ proposal.title }} <small class="pull-right">{{ proposal.createdAt | localizeddate('medium', 'none') }}</small></h3>
                <p class="list-group-item-text">{{ proposal.description }}</p>
                <ul class="list-inline">
                    {% if proposal.commentsNotModeratedCount %}<li><span class="icon-comment_outline"></span> {{ proposal.commentsNotModeratedCount  }}</li>{% endif %}
                    {% if proposal.documents | length > 0 %}<li><span class="icon-cloud_download"></span> {{ proposal.documents | length }}</li>{% endif %}
                </ul>
            </div>
        </a>
    {% else %}
        <div class="list-group-item">
            <div class="alert alert-warning no-m-bottom" role="alert">
                <p class="llist-group-item-text"><span class="icon-warning"></span> {{ 'front.participation.discussions.noitems' | trans }}</p>
            </div>
        </div>
    {% endfor %}
</div>
