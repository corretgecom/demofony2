{% for document in documents %}
    <a href="{{ path('demofony2_front_transparency_detail', {category: document.category.slug, document: document.slug}) }}">
        <div class="list-group">
            <h5 class="list-group-item-heading">{{ document.name }}</h5>
            <p class="list-group-item-text c-black">
                {% include 'Front/includes/truncated-summary.html.twig' with {value: document.description, amount: 200} %}
                {#<br>{{ document.visits }} {{ 'front.transparency.interesting.visits' | trans }}#}
            </p>
        </div>
    </a>
{% endfor %}
