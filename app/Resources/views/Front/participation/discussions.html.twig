{% extends ':Front:layout.html.twig' %}

{% block title %}{{ parent() }} Â· {{ 'front.participation.discussions' | trans | capitalize }}{% endblock %}

{% block bodyattr %}class="participation"{% endblock %}

{% block main %}
    <div class="container">
        {#<!-- Breadcrumb -->#}
        <div class="row">
            <div class="col-md-12">
                <div class="banner">
                    <div class="overlap">
                        <img class="img-responsive center-block" data-src="holder.js/1140x153/#7EA0B6:#7EA0B6" alt="dummy"/>
                        {% block breadcrumb %}
                            <ol class="breadcrumb">
                                <li><a href="{{ path('demofony2_front_participation') }}">{{ 'front.participation.heading' | trans }}</a></li>
                                <li>{{ 'front.participation.discussions' | trans }}</li>
                            </ol>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
        <div role="tabpanel">
            {#<!-- Tab menu -->#}
            <div class="row">
                <div class="col-md-12">
                    <ul class="nav nav-pills nav-justified" role="tablist">
                        <li role="presentation" class="active"><a href="#open" aria-controls="open" role="tab" data-toggle="tab">{{ 'front.participation.discussions.open' | trans }}</a></li>
                        <li role="presentation"><a href="#closed" aria-controls="closed" role="tab" data-toggle="tab">{{ 'front.participation.discussions.close' | trans }}</a></li>
                    </ul>
                </div>
            </div>
            {#<!-- Discussions list -->#}
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="open">
                    <div class="row">
                        <div class="col-md-8">
                            {% include 'Front/includes/participation/discussions-list.html.twig' with { 'discussions': openDiscussions } %}
                        </div>
                        <div class="col-md-4">
                            {% include 'Front/includes/participation/common-right-side.html.twig' %}
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="closed">
                    <div class="row">
                        <div class="col-md-8">
                            {% include 'Front/includes/participation/discussions-list.html.twig' with { 'discussions': closeDiscussions } %}
                        </div>
                        <div class="col-md-4">
                            {% include 'Front/includes/participation/common-right-side.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footlangca %}{{ path('demofony2_front_participation_discussions', {'_locale': 'ca'}) }}{% endblock %}
{% block footlanges %}{{ path('demofony2_front_participation_discussions', {'_locale': 'es'}) }}{% endblock %}
{% block footlangen %}{{ path('demofony2_front_participation_discussions', {'_locale': 'en'}) }}{% endblock %}
