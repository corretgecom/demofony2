{% block footlanges %}{{ path('demofony2_front_participation_discussions_list_open', {'_locale': 'es'}) }}{% endblock %}
{% block footlangen %}{{ path('demofony2_front_participation_discussions_list_open', {'_locale': 'en'}) }}{% endblock %}
