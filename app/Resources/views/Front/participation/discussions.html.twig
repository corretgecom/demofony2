{% extends ':Front:layout.html.twig' %}

{% block title %}{{ parent() }} Â· {{ 'front.participation.discussions' | trans | capitalize }}{% endblock %}

{% block bodyattr %}class="participation"{% endblock %}

{% block main %}
    <div class="container">
        {#<!-- Breadcrumb -->#}
        <div class="row">
            <div class="col-md-12">
                <div class="banner">
                    <div class="overlap">
                        <img class="img-responsive center-block" src="{{ 'bundles/demofony2app/images/titular-participacio-debat.jpg' | imagine_filter('front_heading') }}" alt="{{ 'front.participation.discussions' | trans }} logo"/>
                        {% block breadcrumb %}
                            <ol class="breadcrumb">
                                <li><a href="{{ path('demofony2_front_participation') }}">{{ 'front.participation.heading' | trans }}</a></li>
                                <li class="active">{{ 'front.participation.discussions' | trans }}</li>
                            </ol>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
        <div role="tabpanel">
            {#<!-- Tab menu -->#}
            <div class="row">
                <div class="col-md-8">
                    <ul class="nav nav-pills nav-justified" role="tablist">
                        <li role="presentation" class="{% if open %} active{% endif %}"><a href="#open" aria-controls="open" role="tab" data-toggle="tab">{{ 'front.participation.discussions.open' | trans }}</a></li>
                        <li role="presentation" class="{% if not open %} active{% endif %}"><a href="#closed" aria-controls="closed" role="tab" data-toggle="tab">{{ 'front.participation.discussions.close' | trans }}</a></li>
                    </ul>
                    {#<!-- Discussions list -->#}
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane {% if open %} active{% endif %}" id="open">
                            {% include 'Front/includes/participation/discussions-list.html.twig' with {discussions: openDiscussions} %}
                        </div>
                        <div role="tabpanel" class="tab-pane {% if not open %} active{% endif %}" id="closed">
                            {% include 'Front/includes/participation/discussions-list.html.twig' with {discussions: closeDiscussions} %}
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    {% include 'Front/includes/participation/common-right-side.html.twig' %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

