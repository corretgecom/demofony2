{% extends ':Front:layout.html.twig' %}

{% block title %}{{ parent() }} · {{ 'front.home.block.transparency.title' | trans | capitalize }}{% endblock %}

{% block bodyattr %}class="transparency"{% endblock %}

{% block main %}
<div class="container">
    {#<!-- Breadcrumb -->#}
    <div class="row">
        <div class="col-md-12">
            <div class="banner">
                <div class="overlap">
                    <img class="img-responsive center-block" data-src="holder.js/1140x153/#7EA0B6:#7EA0B6" alt="dummy"/>
                    {% block breadcrumb %}
                        <ol class="breadcrumb">
                            <li class="active">{{ 'front.home.block.transparency.title' | trans }}</li>
                        </ol>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
    {#<!-- Helper text block -->#}
    <div class="row">
        <div class="col-md-12">
            <p>{{ paragraphs(2) }}</p>
        </div>
    </div>
    {#<!-- Main blocks -->#}
    <div class="row">
        <div class="col-md-12">
            <h1 class="c-blue-dark">{{ 'front.transparency.categories' | trans }}</h1>
        </div>
    </div>
    <div class="row">
        {% for category in categories %}
            <div class="col-md-4">
                <a href="{{ path('demofony2_front_transparency_list', {slug: category.slug}) }}">
                    <div class="well category-box">
                        <div class="caption">
                            <header>
                                <h2><span class="icon-checklist{# TODO load class name from entity #}"></span></h2>
                            </header>
                            <h3 class="no-m">{{ category.name }}</h3>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
    {#<!-- Extra bottom blocks -->#}
    <div class="row">
        {# recent activity #}
        <div class="col-md-6">
            <div class="well bottom-box">
                <div class="row no-m-bottom">
                    <div class="col-md-6">
                        <div class="caption">
                            <header>
                                <h2><span class="icon-comment_like_ok"></span></h2>
                            </header>
                            <h3 class="no-m">{{ 'front.transparency.interesting' | trans }}</h3>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="interesting-docs">
                            {% for document in interestingDocs %}
                                <a href="{{ path('demofony2_front_transparency_detail', {category: document.category.slug, document: document.slug}) }}">
                                    <div class="list-group">
                                        <h5 class="list-group-item-heading">{{ document.name }}</h5>
                                        <p class="list-group-item-text">{{ document.createdAt | localizeddate('medium', 'none') }} · {{ document.visits }}</p>
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>

            </div>
        </div>
        {# external links #}
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <a href="{{ path('demofony2_front_cms_rendering_account') }}">
                        <div class="well bottom-box">
                            <div class="caption">
                                <header>
                                    <h2><span class="icon-checklist"></span></h2>
                                </header>
                                <h3 class="no-m">{{ cms.accounts.title | upper }}</h3>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="{{ path('demofony2_front_cms_collaborates') }}">
                        <div class="well bottom-box">
                            <div class="caption">
                                <header>
                                    <h2><span class="icon-comment_outline"></span></h2>
                                </header>
                                <h3 class="no-m">{{ cms.collaborate.title | upper }}</h3>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <a href="{{ path('demofony2_front_cms_transparency_law') }}">
                        <div class="well bottom-box">
                            <div class="caption">
                                <header>
                                    <h2><span class="icon-laws"></span></h2>
                                </header>
                                <h3 class="no-m">{{ cms.laws.title | upper }}</h3>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="{{ path('demofony2_front_cms_public_information') }}">
                        <div class="well bottom-box">
                            <div class="caption">
                                <header>
                                    <h2><span class="icon-comment_question_mark"></span></h2>
                                </header>
                                <h3 class="no-m">{{ cms.info.title | upper }}</h3>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{#{% include ':Front/includes:transparency-indicators.html.twig' %}#}
{% endblock %}

