{% extends ':Front:layout.html.twig' %}

{% block title %}{{ parent() }} Â· {{ 'front.home.block.transparency.title' | trans | capitalize }}{% endblock %}

{% block bodyattr %}class="transparency"{% endblock %}

{% block main %}
<div class="container">
    {#<!-- Breadcrumb -->#}
    <div class="row">
        <div class="col-md-12">
            <div class="banner">
                <div class="overlap">
                    <img class="img-responsive center-block" data-src="holder.js/1140x153/#7EA0B6:#7EA0B6" alt="dummy"/>
                    {% block breadcrumb %}
                        <ol class="breadcrumb">
                            <li class="active">{{ 'front.home.block.transparency.title' | trans }}</li>
                        </ol>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
    {#<!-- Helper text block -->#}
    <div class="row">
        <div class="col-md-12">
            <p>{{ paragraphs(2) }}</p>
        </div>
    </div>
    {#<!-- Main blocks -->#}
    <div class="row">
        {% for category in categories %}
            <div class="col-md-4">
                <div class="well bottom-advert">
                    <div class="caption bg-blue-light">
                        <header>
                            <h2 class="no-m-top text-center">
                                <span class="icon-checklist"></span><br>
                                {{ category.name }}
                            </h2>
                        </header>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

