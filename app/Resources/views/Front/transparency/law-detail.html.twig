{% extends ':Front:layout.html.twig' %}

{% block title %}{{ parent() }} · {{ 'front.home.block.transparency.title' | trans | capitalize }} · {{ law.name }}{% endblock %}

{% block bodyattr %}class="transparency"{% endblock %}

{% block main %}
    <div class="container">
        {#<!-- Breadcrumb -->#}
        <div class="row">
            <div class="col-md-12">
                <div class="banner">
                    <div class="overlap">
                        <img class="img-responsive center-block" data-src="holder.js/1140x153/#7EA0B6:#7EA0B6" alt="dummy"/>
                        {% block breadcrumb %}
                            <ol class="breadcrumb">
                                <li><a href="{{ path('demofony2_front_transparency') }}">{{ 'front.home.block.transparency.title' | trans }}</a></li>
                                <li class="active">{{ law.name }}</li>
                            </ol>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
        {#<!-- Law detail -->#}
        <div class="row">
            <div class="col-md-12">
                <h2 class="transparency-list-header">{{ law.name }}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p>{{ law.description | raw }}</p>
                <br/>
                {% if law.links | length > 0 %}
                    <dl>
                        <dt class="c-blue-dark">{{ 'front.transparency.links.related' | trans }}</dt>
                        {% for link in law.links %}
                            <dd><a class="c-black" href="{{ link.url }}" target="_blank"><span class="icon-link c-blue-dark"></span> {{ link.name }}</a></dd>
                        {% endfor %}
                    </dl>
                {% endif %}
                {#{% if document.visits > 0 %}<p style="margin-top:20px"><span class="icon-search"></span> {{ document.visits }}</p>{% endif %}#}
            </div>
        </div>
    </div>
{% endblock %}
