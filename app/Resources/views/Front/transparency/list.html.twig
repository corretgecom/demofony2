{% extends ':Front:layout.html.twig' %}

{% block title %}{{ parent() }} · {{ 'front.home.block.transparency.title' | trans | capitalize }} · {{ category.name }}{% endblock %}

{% block bodyattr %}class="transparency"{% endblock %}

{% block main %}
<div class="container">
    {#<!-- Breadcrumb -->#}
    <div class="row">
        <div class="col-md-12">
            <div class="banner">
                <div class="overlap">
                    <img class="img-responsive center-block" data-src="holder.js/1140x153/#7EA0B6:#7EA0B6" alt="dummy"/>
                    {% block breadcrumb %}
                        <ol class="breadcrumb">
                            <li><a href="{{ path('demofony2_front_transparency') }}">{{ 'front.home.block.transparency.title' | trans }}</a></li>
                            <li class="active">{{ category.name }}</li>
                        </ol>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
    {#<!-- Documents list -->#}
    <div class="row">
        <div class="col-md-12">
            <h2 class="no-m-top"><span class="icon-checklist{# TODO load class name from entity #}"></span> {{ category.name }}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="list-group">
                {% for document in documents %}
                    <a href="{{ path('demofony2_front_transparency_detail', {category: category.slug, document:document.slug}) }}" class="list-group-item">
                        <h4 class="list-group-item-heading">{{ document.name }} <small class="pull-right">{{ document.createdAt | localizeddate('medium', 'none') }}</small></h4>
                        <p class="list-group-item-text">
                            {% if document.links | length > 0 %}<span class="glyphicon glyphicon-new-window"></span> {{ document.links | length }}&nbsp;{% endif %}
                            {% if document.laws | length > 0 %}<span class="icon-laws"></span> {{ document.laws | length }}{% endif %}
                        </p>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
