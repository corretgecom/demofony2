{% extends ':Front:layout.html.twig' %}

{% block title %}{{ parent() }} Â· {{ 'front.login.title' | trans | capitalize }}{% endblock %}

{% block bodyattr %}class="login"{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                {#<!-- Login Box -->#}
                <form class="form" role="form" method="post" action="{{ path("fos_user_security_check") }}"
                      accept-charset="UTF-8" id="login-nav">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h2>{{ 'front.login.title' | trans | capitalize }}</h2>
                            <div class="form-group{% if error %} has-error{% endif %}">
                                <label class="sr-only" for="username">{{ 'front.email' | trans }}</label>
                                {% if error %}<span id="helpBlock" class="help-block"><span class="icon-warning"></span>&nbsp;{{ error | trans }}</span>{% endif %}
                                <input type="text" class="form-control" id="username" name="_username"
                                       value="{{ last_username }}"
                                       placeholder="{{ 'form.label.email' | trans }}"
                                       required="required">
                            </div>
                            <div class="form-group{% if error %} has-error{% endif %}">
                                <label class="sr-only" for="password">{{ 'front.passwd' | trans }}</label>
                                <input type="text" class="form-control" id="password" name="_password"
                                       value="{{ last_username }}"
                                       placeholder="{{ 'form.label.password' | trans }}"
                                       required="required">
                            </div>
                            <div class="form-group">
                                <input type="submit" id="_submit" name="_submit" class="btn btn-sm btn-primary"
                                       value="{{ 'form.label.login' | trans }}">
                            </div>
                        </div>
                        <div class="panel-footer">
                            {% render(controller('HWIOAuthBundle:Connect:connect')) %}
                        </div>
                    </div>
                </form>

